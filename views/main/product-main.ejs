<% layout('layout') -%>

<div class="jumbotron" id="navbar-gap">
  <div class="container">
  <h1 class="text-center"><b> Shop Smart , Save Big</b></h1>
    <p class="text-center"> Find your favourite product here</p>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="input-group col-md-12">
          <span class="input-group-btn">
          <input id="search" type="text" class="form-control input-lg" name="search_term" placeholder="Search for a product...">
          <button type="submit" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> </button>
        </div>
      </span>
      </div>

    </div>
  </div>
</div>



<div class="container">
<div id="search-results" class="row">

<% for (var i=0;i<products.length;i++) { %>
<div class="col-md-4">
<a href="/product/<%= products[i]._id %>">
  <div class="thumbnail">
    <img src="<%= products[i].image %>" />
    <div class="caption">
      <h3><%= products[i].name %> </h3>
    <p><%=products[i].category.name %> </p>
    <p>$<%=products[i].price %></p>
  </div>
    </div>

</a>
</div>
<% } %>


<ul class="pagination text-center">
<li>
<% for(var i=1;i<=pages;i++){ %>
<% if(i==1) { %>
  <li><a href="/"><%=i %></a></li>
  <%}else { %>
<li><a href="/page/<%= i %>"><%=i %></a></li>

    <% } %>

    <% } %>
</li>
</ul>

</div>

</div>
